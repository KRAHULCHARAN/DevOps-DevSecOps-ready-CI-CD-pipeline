{
  "name": "devops-cicd-app",
  "version": "1.0.0",
  "description": "Sample microservice application for DevOps/DevSecOps CI/CD pipeline demonstration",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "security:check": "npm audit",
